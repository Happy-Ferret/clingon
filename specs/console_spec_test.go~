package specs

import (
	"testing"
	pt "spectrum/prettytest"
	"âš›sdl/ttf"
	c "console"
)

func should_be_initialized(t *pt.T) {
	console := c.NewConsole(c.NewSDLConsole(640, 480, ttf.OpenFont("../testdata/fontin_sans.otf", 72)))
	t.NotNil(console)
}

func should_receive_chars(t *pt.T) {
	console.CharCh() <- "a"
	console.CharCh() <- "b"
	console.CharCh() <- "c"
}

func TestConsoleSpecs(t *testing.T) {
	pt.Describe(
		t,
		"Console",
		should_be_initialized,
		should_receive_chars,

		before,
		after,
	)
}
